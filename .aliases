alias pi="pod install"

alias unity="/Applications/Unity/Unity.app/Contents/MacOS/Unity &"

function ga () {
    if [[ $# -eq 0 ]]; then
        git add -A .
    else
        git add -A $@
    fi
}

function gdt () {
    git tag -d $1
	git push origin :refs/tags/$1
}
function gi() { curl http://www.gitignore.io/api/$@ ;}

function md () {
    mkdir -p $1
    cd $1
}

